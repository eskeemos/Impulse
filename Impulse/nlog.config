<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Warn"
      internalLogFile="c:\impulse\data.log">

	<targets>
		<target xsi:type="File"
				name="fileTarget"
				fileName="c:\impulse\${var:fileName}"
				archiveFileName="c:\impulse\archive\${var:archiveFileName}"
				maxArchiveFiles="7"
				archiveEvery="Day"
				layout="${date}|${level:uppercase=true}|${logger}| ${message} ${exception}" />
		<target xsi:type="Console"
				name="consoleTarget"
				layout="${date}|${level:uppercase=true}|${logger}| ${message} ${exception}" />
		<target xsi:type="Null"
				name="nullTarget" />
	</targets>

	<rules>
		<logger name="IMPULSE"
				minLevel="Trace"
				writeTo="consoleTarget" />
		<logger name="IMPULSE"
				minLevel="Info"
				writeTo="fileTarget" />
		<logger name="Microsoft.*" 
				minlevel="Trace"
				writeTo="nullTarget" 
				final="true" />
	</rules>
</nlog>